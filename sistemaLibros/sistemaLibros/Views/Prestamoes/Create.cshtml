@model sistemaLibros.Models.Prestamo

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Crear Prestamo</h1>


<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">


            <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Idlibro" class="control-label"></label>
                <select asp-for="Idlibro" class ="form-control" asp-items="ViewBag.Idlibro"></select>
            </div>
            <div class="form-group">
                <label asp-for="Iduser" class="control-label"></label>
                <select asp-for="Iduser" class ="form-control" asp-items="ViewBag.Iduser"></select>
            </div>
            </div>
            <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Fechainicio" class="control-label"></label>
                <input asp-for="Fechainicio" class="form-control" />
                <span asp-validation-for="Fechainicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Fechafin" class="control-label"></label>
                <input asp-for="Fechafin" class="form-control" />
                <span asp-validation-for="Fechafin" class="text-danger"></span>
            </div>
            </div>
            <hr class="m-2" />
            <div class="form-group col-md-6">
                <input type="submit" value="Create" class="btn btn-primary w-100" />
            </div>
                <div class="col-md-6">
                    <a class="btn btn-secondary w-100" asp-action="Index">Volver a la lista</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
